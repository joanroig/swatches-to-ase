{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev:web",
      "type": "npm",
      "script": "dev:web",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": [
          {
            "regexp": ".*"
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v",
          "endsPattern": "Local:"
        }
      }
    },
    {
      "label": "npm: dist:desktop (win)",
      "type": "shell",
      "command": "npm run dist:desktop -- --win"
    },
    {
      "label": "npm: dist:desktop (mac)",
      "type": "shell",
      "command": "npm run dist:desktop -- --mac"
    },
    {
      "label": "npm: dist:desktop (linux)",
      "type": "shell",
      "command": "npm run dist:desktop -- --linux"
    },
    {
      "label": "npm: dist:desktop (all)",
      "type": "shell",
      "command": "npm run dist:desktop -- --win --mac --linux"
    }
  ]
}
