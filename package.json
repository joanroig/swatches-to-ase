{
  "name": "swatches-to-ase",
  "description": "Convert Procreate swatches file to Adobe ase format. Can be used for importing Procreate palettes into Photoshop or other programs like Illustrator or Affinity Designer.",
  "version": "2.0.0",
  "main": "dist-electron/electron/main.js",
  "repository": "https://github.com/joanroig/swatches-to-ase.git",
  "author": "Joan Roig <joanroigsegura@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=22.12.0"
  },
  "type": "module",
  "scripts": {
    "build": "rimraf ./build && tsc -p tsconfig.build.json",
    "convert": "npx tsx ./src/index.ts",
    "dev:web": "vite",
    "build:web": "vite build",
    "preview:web": "vite preview",
    "dev:desktop": "concurrently -k \"npm run dev:web\" \"tsc -p electron/tsconfig.json --watch\" \"wait-on http://localhost:5173 dist-electron/electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:desktop": "npm run build:web && tsc -p electron/tsconfig.json",
    "dist:desktop": "npm run build:desktop && electron-builder",
    "run:dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "format": "eslint . --ext .ts --fix",
    "format:staged": "lint-staged",
    "version:bump": "node scripts/bump-version.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "ase-utils": "^0.1.1",
    "color-convert": "^3.1.3",
    "color-namer": "^1.4.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jszip": "^3.10.1",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "procreate-swatches": "^0.1.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/color-convert": "^2.0.4",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "tsx": "^4.21.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --cache --fix"
  },
  "typings": "src/global.d.ts",
  "build": {
    "appId": "com.joanroig.swatchestoase",
    "productName": "Swatches to ASE",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**",
      "dist-web/**",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "swatches-to-ase-v${version}-macos-arm64-portable.${ext}"
    },
    "dmg": {
      "artifactName": "swatches-to-ase-v${version}-macos-arm64-installer.${ext}"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "swatches-to-ase-v${version}-windows-portable.${ext}"
    },
    "nsis": {
      "artifactName": "swatches-to-ase-v${version}-windows-installer.${ext}"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "appImage": {
      "artifactName": "swatches-to-ase-v${version}-linux-amd64-portable.${ext}"
    },
    "deb": {
      "artifactName": "swatches-to-ase-v${version}-linux-amd64-installer.${ext}"
    }
  }
}
